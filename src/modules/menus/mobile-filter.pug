#catalog-filter.mobile-filter-holder

    .basket-inner
      .basket-menu__close
      .basket-menu-sections
        .basket-mobile-menu__header
          .mobile-filter-heading-title Фильтры(3)
          a.basket__title-link-clean-basket(href='#' onclick='window.location.reload();return false;') Очистить фильтр

        .basket-mobile-menu__body.simplebar
        
          .mobile-filter-items
            .mobile-filter-item
              .mobile-filter-item-heading
                .mobile-filter-item-heading-title Сортировать (Цена по убыванию)
                .mobile-filter-item-heading-toggler
              include ../filters/filter-priсes-block            
            .mobile-filter-item
              .mobile-filter-item-heading
                .mobile-filter-item-heading-title Цвет(2)
                .mobile-filter-item-heading-toggler
              include ../filters/filter-colors-block  
            .mobile-filter-item
              .mobile-filter-item-heading
                .mobile-filter-item-heading-title Материалы
                .mobile-filter-item-heading-toggler
              include ../filters/filter-materials-block 
              .mobile-filter-item-content
            .mobile-filter-item
              .mobile-filter-item-heading
                .mobile-filter-item-heading-title Размер
                .mobile-filter-item-heading-toggler
              include ../filters/filter-sizes-block
            .mobile-filter-item.open
              .mobile-filter-item-heading
                .mobile-filter-item-heading-title Цена
                .mobile-filter-item-heading-toggler
              .mobile-filter-item-content
                .filter-price
                  .filter-price-fields
                    .filter-price-field-item
                      //- label.filter-price-field-item-title от
                      input.form-item.form-item--text.filter-price-field.filter-price-field--from(type='text' value='1000')
                    .filter-price-field-item
                      //- label.filter-price-field-item-title до
                      input.form-item.form-item--text.filter-price-field.filter-price-field--to(type='text' value='1000000')
                  input.form-item.form-item--range(type='range' data-value='1000,1000000' value='1000, 1000000' min='1000' max='1000000' step='1' multiple='')

      .basket-mobile-menu__footer
        button.btn.btn--black.btn--medium.w100.max-w100(type='submit') ПОКАЗАТЬ РЕЗУЛЬТАТЫ (688)

